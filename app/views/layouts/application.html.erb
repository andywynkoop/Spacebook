<!DOCTYPE html>
<html>
  <head>
    <title>Myface - Log In or Sign Up</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script>
      <% if current_user %>
        window.currentUser = {
          id: "<%=current_user.id%>",
          email: "<%=current_user.email%>",
          firstname: "<%=current_user.firstname%>",
          lastname: "<%=current_user.lastname%>"
        }
      <% end %>
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
